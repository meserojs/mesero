{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
